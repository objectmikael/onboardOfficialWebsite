            <div id="subjects">
                <p>HTML</p>
                <p>CSS</p>
                <p>JS</p>
            </div>
        </article>
        <article>
            <h1>Module 2</h1>
            <h4> Front-End <br> Development</h4>
            <div id="subjects">
                <p>React</p>
                <p>Redux</p>
                <p>API</p>
            </div>
        </article>
        <article>
            <h1>Module 3</h1>
            <h4> Back-End  <br> Development</h4>
            <div id="subjects">
                <p>Node.js</p>
                <p>Express.js</p>
                <p>MongoDB</p>
            </div>
        </article>
        <article>
            <h1>Module 4</h1>
            <h4> Full-Stack <br> Development</h4>
            <div id="subjects">
                <p>MERN Stack</p>
                <p>RESTful API</p>
            </div>
        </article>
    </section>
    
    <section id="list">
        <div id="phraseTwo">
            <img src="Resources/do_something_great.jpg" alt="">
        </div>
        <div id="listItems">
            <ul>
                <li>Interactive Project-Based Learning</li>
                <li>GitHub Project Portfolio</li>
                <li>1:1 Coaching</li>
                <li>Mock Interviews</li>
                <li>Job Search Support</li>
            </ul>
        </div>
      
    </section>


