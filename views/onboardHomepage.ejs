    <section id="moreInfoSignup">
        <h1>Contact us for more information</h1>
        <br>
        <div id="message"></div>
        <form action="/generateLead" method="post">
            <div> 
                <input name="firstName" id="firstName" type="text" placeholder="First Name" required>
            </div>
            <div> 
                <input name="lastName" id="lastName" type="text" placeholder="Last Name" required>
            </div>
            <div>
                <input name="email" id="email" type="email" placeholder="Email address" required>
            </div>
            <div>
                <input name="mobile" id="mobile" type="text" placeholder=" Mobile (xxx-xxx-xxxx)" required>
            </div>
            <div>
                <textarea name="textBox" id="textBox" cols="16" rows="5" placeholder="Drop A Note"></textarea>
            </div>
            <div id="signupBtn">
                <button type="submit">Learn More</button>
            </div>
